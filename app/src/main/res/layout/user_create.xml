<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakcgorund_2">

    <EditText
        android:id="@+id/user_tc_no"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintEnd_toEndOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="T.C. No."
        android:textColor="#cabba5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/user_pass"
        app:layout_constraintStart_toStartOf="@+id/user_pass"
        app:layout_constraintTop_toBottomOf="@+id/user_tc_no" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="176dp"
        android:text="Adı"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_surname"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toTopOf="@+id/user_pass"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Soyadı"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_surname"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintEnd_toEndOf="@+id/departments"
        app:layout_constraintStart_toStartOf="@+id/departments"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/roles"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="247dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:foreground="@drawable/border"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departments" />

    <Spinner
        android:id="@+id/departments"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:foreground="@drawable/border"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/user_pass" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="39dp"
        android:text="Departmanı"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/departments"
        app:layout_constraintEnd_toStartOf="@+id/departments"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rolü"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/roles"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="Şifresi"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_pass"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/kullanici_olustur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:backgroundTint="#cabaac"
        android:text="Kullanıcı Kaydet"
        android:textColor="#060a0d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#6e5731" />

</androidx.constraintlayout.widget.ConstraintLayout>