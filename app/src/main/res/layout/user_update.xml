<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bakcgorund_2"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/users"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:foreground="@drawable/border"
        android:textColor="#cabba5"
        app:layout_constraintEnd_toEndOf="@+id/user_tc_no"
        app:layout_constraintStart_toStartOf="@+id/user_tc_no"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_tc_no"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="67dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/departments"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:foreground="@drawable/border"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toBottomOf="@+id/roles"
        app:layout_constraintEnd_toEndOf="@+id/roles"
        app:layout_constraintStart_toStartOf="@+id/roles"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:layout_height="44dp"
        android:textColor="#cabba5"
        android:foreground="@drawable/border"
        android:paddingLeft="10dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/user_surname"
        app:layout_constraintTop_toBottomOf="@+id/user_surname" />

    <EditText
        android:id="@+id/user_surname"
        android:layout_width="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:layout_height="44dp"
        android:textColor="#cabba5"
        android:foreground="@drawable/border"
        android:paddingLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/user_name" />

    <Spinner
        android:id="@+id/roles"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="174dp"
        android:layout_marginBottom="175dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:foreground="@drawable/border"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toBottomOf="@+id/kullaniciyi_sil"
        app:layout_constraintEnd_toEndOf="@+id/user_pass"
        app:layout_constraintStart_toStartOf="@+id/user_pass"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:layout_height="44dp"
        android:textColor="#cabba5"
        android:foreground="@drawable/border"
        android:paddingLeft="10dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/user_tc_no"
        app:layout_constraintTop_toBottomOf="@+id/user_tc_no" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="35dp"
        android:textColor="#cabba5"
        android:text="Kullanıcı Seç"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="66dp"
        android:text="Adı"
        android:textColor="#cabba5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="67dp"
        android:text="Soyadı"
        android:textColor="#cabba5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Şifresi"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_pass"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="Departmanı"
        android:textColor="#cabba5"
        app:layout_constraintBaseline_toBaselineOf="@+id/departments"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#cabba5"
        android:text="T.C. No."
        app:layout_constraintBaseline_toBaselineOf="@+id/user_tc_no"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#cabba5"
        android:text="Rolü"
        app:layout_constraintBottom_toBottomOf="@+id/roles"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/kullaniciyi_guncelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#060a0d"
        app:rippleColor="#6e5731"
        android:backgroundTint="#cabaac"
        android:layout_marginBottom="40dp"
        android:text="Kullanıcıyı Güncelle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/kullaniciyi_sil"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:textColor="#060a0d"
        app:rippleColor="#6e5731"
        android:backgroundTint="#cabaac"
        android:text="Kullanıcıyı Sil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>