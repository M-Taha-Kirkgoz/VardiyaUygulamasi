<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakcgorund_2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTCNo"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toTopOf="@+id/Pass_Label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TC_Label" />

    <TextView
        android:id="@+id/TC_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="8dp"
        android:text="T.C. Numarası"
        android:textColor="#cabba5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTCNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <Button
        android:id="@+id/Login_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="144dp"
        android:backgroundTint="#cabaac"
        android:text="Giriş Yap"
        android:textColor="#060a0d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:rippleColor="#6e5731" />

    <TextView
        android:id="@+id/Pass_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="267dp"
        android:text="Şifre"
        android:textColor="#cabba5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTCNo" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#2e3133"
        android:ems="10"
        android:foreground="@drawable/border"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#cabba5"
        app:layout_constraintBottom_toTopOf="@+id/Login_Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Label" />

    <Button
        android:id="@+id/tablo_sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="57dp"
        android:text="Tablo Sil"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tablo_olustur"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tablo_olustur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="57dp"
        android:text="Tablo Olustur"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="125dp"
        android:text="VardiyaGO"
        android:textColor="#cabba5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>